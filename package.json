{
  "name": "casadf-crm-v2",
  "version": "2.0.0",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "tsx watch server/index.ts",
    "client": "vite client",
    "build": "tsc && vite build",
    "start": "node dist/server/index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx server/migrate.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.3",
    "pg": "^8.11.3",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "concurrently": "^8.2.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "drizzle-kit": "^0.20.14",
    "@types/pg": "^8.11.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  }
}
